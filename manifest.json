{
  "manifest_version": 3,
  "name": "FLUF Connect Utility Extension",
  "version": "1.8.0",
  "description": "Supports the functionality of FLUF Connect (fluf.io/connect)",
  "permissions": [
    "alarms",
    "storage",
    "scripting",
    "tabs",
    "webRequest",
    "cookies"
  ],
  "host_permissions": [
    "https://fluf.io/*",
    "*://*.depop.com/*",
    "*://*.vinted.co.uk/*",
    "*://*.vinted.com/*",
    "*://*.vinted.at/*",
    "*://*.vinted.be/*",
    "*://*.vinted.cz/*",
    "*://*.vinted.de/*",
    "*://*.vinted.dk/*",
    "*://*.vinted.es/*",
    "*://*.vinted.fi/*",
    "*://*.vinted.fr/*",
    "*://*.vinted.gr/*",
    "*://*.vinted.hr/*",
    "*://*.vinted.hu/*",
    "*://*.vinted.ie/*",
    "*://*.vinted.it/*",
    "*://*.vinted.lt/*",
    "*://*.vinted.lu/*",
    "*://*.vinted.nl/*",
    "*://*.vinted.pl/*",
    "*://*.vinted.pt/*",
    "*://*.vinted.ro/*",
    "*://*.vinted.se/*",
    "*://*.vinted.sk/*",
    "http://localhost/*",
    "http://fluf.local/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://fluf.io/*", "http://localhost/*", "http://fluf.local/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}