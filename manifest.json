{
  "manifest_version": 3,
  "name": "FLUF Connect Utility Extension",
  "version": "1.8.6",
  "description": "Supports the functionality of FLUF Connect (fluf.io/connect)",
  "permissions": [
    "alarms",
    "storage",
    "scripting",
    "tabs",
    "webRequest",
    "cookies",
    "declarativeNetRequest"
  ],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "vinted_headers",
        "enabled": true,
        "path": "dnr_rules.json"
      }
    ]
  },
  "host_permissions": [
    "https://fluf.io/*",
    "https://*.fluf.io/*",
    "*://*.depop.com/*",
    "*://*.facebook.com/*",
    "*://*.vinted.co.uk/*",
    "*://*.vinted.com/*",
    "*://*.vinted.at/*",
    "*://*.vinted.be/*",
    "*://*.vinted.cz/*",
    "*://*.vinted.de/*",
    "*://*.vinted.dk/*",
    "*://*.vinted.es/*",
    "*://*.vinted.fi/*",
    "*://*.vinted.fr/*",
    "*://*.vinted.gr/*",
    "*://*.vinted.hr/*",
    "*://*.vinted.hu/*",
    "*://*.vinted.ie/*",
    "*://*.vinted.it/*",
    "*://*.vinted.lt/*",
    "*://*.vinted.lu/*",
    "*://*.vinted.nl/*",
    "*://*.vinted.pl/*",
    "*://*.vinted.pt/*",
    "*://*.vinted.ro/*",
    "*://*.vinted.se/*",
    "*://*.vinted.sk/*",
    "*://*.vinted.net/*",
    "http://localhost/*",
    "http://fluf.local/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://fluf.io/*", "https://*.fluf.io/*", "http://localhost/*", "http://fluf.local/*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }
}