{
  "manifest_version": 3,
  "name": "FLUF Utility Extension",
  "version": "1.0.8",
  "description": "Extracts authentication tokens from marketplace platforms for FLUF circular authentication",
  "permissions": [
    "alarms",
    "storage",
    "scripting",
    "tabs",
    "cookies",
    "webRequest"
  ],
  "host_permissions": [
    "https://fluf.io/*",
    "https://www.depop.com/*",
    "https://www.vinted.co.uk/*",
    "https://vinted.co.uk/*",
    "https://www.vinted.com/*",
    "https://vinted.com/*",
    "http://localhost/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://fluf.io/*", "http://localhost/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}